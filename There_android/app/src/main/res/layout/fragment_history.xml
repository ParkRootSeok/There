<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_history_folder_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_history_folder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_history_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/img_history_folder_iv"
            app:layout_constraintTop_toTopOf="@id/img_history_folder_iv"
            app:layout_constraintBottom_toBottomOf="@id/img_history_folder_iv"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:id="@+id/history_content_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_history_folder_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첫번째 기록, "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="두번째 기록, "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세번째 기록, "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네번째 기록, "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다섯번째 기록, "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>